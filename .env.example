###############################################
# Example environment variables (copy to .env) #
###############################################

# Comma separated list of Kafka / Redpanda brokers
KAFKA_BROKERS=localhost:19092

# Topic name for published Keycloak user events
KAFKA_TOPIC=keycloak.user.events

# (Optional) Keycloak admin access if needed by helper scripts
KEYCLOAK_BASE_URL=http://localhost:8080
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Add any additional customization variables below
KEYCLOAK_URL=https://keycloak.example.com
KEYCLOAK_REALM=your_realm
KEYCLOAK_CLIENT_ID=your_client_id
KEYCLOAK_CLIENT_SECRET=your_client_secret
LOG_LEVEL=INFO